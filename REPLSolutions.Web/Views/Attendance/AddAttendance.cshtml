@model REPLSolutions.Web.ViewModels.AddAttendancePageViewModel

@{
    ViewBag.Title = "AddAttendance";
}

    <h2>Add Attendance  for @Model.ClassRoom.Class.Name   @Model.ClassRoom.Section.Name  </h2>



@using (Html.BeginForm("SaveAttendancePage", "Attendance"))
{
    <table class="table">
        <thead>
            <tr>
                @*<th scope="col">Student Id</th>*@

                <th scope="col">Student First Name</th>
                <th scope="col">Student MiddleName</th>
                <th scope="col">Student Last Name</th>
                <th scope="col">Present/ Absent</th>
                <th scope="col">On Leave</th>


            </tr>
        </thead>
        <tbody>





            @for (int i = 0; i < Model.AttendanceEntries.Count; i++)
            {
                <tr>

                    @*<th scope="row">

                        @Html.DisplayTextFor(m => m.AttendanceEntries[i].Student.Id)
                    </th>*@

                    <th scope="row">@Model.AttendanceEntries[i].Student.FirstName</th>
                    <td>@Model.AttendanceEntries[i].Student.MiddleName</td>
                    <td>@Model.AttendanceEntries[i].Student.LastName</td>
                    <td>
                        @Html.CheckBoxFor(m => Model.AttendanceEntries[i].Present)
                    </td>
                    <td> @Html.CheckBoxFor(m => Model.AttendanceEntries[i].Leave) </td>

                </tr>

                @Html.HiddenFor(m=>Model.AttendanceEntries[i].StudentId)


            }


        </tbody>
    </table>
    <label>Notes</label>
    @Html.TextAreaFor(m => m.Notes, new { @class = "form-control" })
    @Html.HiddenFor(m => m.AttendanceDate)
    @Html.HiddenFor(m => m.classRoomId)

    <br />
    <button type="submit" class="btn btn-primary">Submit </button>
}
